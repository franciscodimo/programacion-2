
<%- include('./partials/header') %> 
<body>
	

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="https://via.placeholder.com/150" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= locals.user ? user.nombre +' '+ user.apellido: '' %> 
						<a href="/profile-edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">Change profile</a>
				</div>
				<div> 
					<ul>
						
						<li class="productos-perfil" style="color: black;">X productos agregados <%-product.length%> 	
						</li>		
						<li>X seguidores</li>
						<li>X comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="titulosss">My products</h2>
			</div>
			<% for( let i = 0; i < product.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
				  <section class="product-box">
					<a href="/product/<%= product[i].id %> ">
					  <figure class="product-box_image">
						<img src="<%- product[i].imagen  %> " alt="cafetera moulinex">
					  </figure>
					  <article class="product-box_data">
						<h2><%- product[i].nombre  %> </h2>
						<p><%- product[i].descripcion  %> </p>
						<p>Comentarios: tiene 99% de condicion de bateria</p>
					  </article>
					</a>
				  </section>
				</div>
			  <% } %> 
			  <div></div>
			  <div class="col-12"><h2 class="titulosss">My comments</h2></div>

	<!-- footer -->
	<%- include('./partials/footer') %> 
	<!-- /footer -->
</body>	
</html>